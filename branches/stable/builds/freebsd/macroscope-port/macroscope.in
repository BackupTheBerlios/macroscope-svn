#!/bin/sh
#
# macroscope - start Macroscope daemon
#
# $FreeBSD$
# 
# PROVIDE: macroscope
# REQUIRE: DAEMON
# KEYWORD: shutdown

# -----------------------------------------------------------------------------
# NAME_enable="NO"	# set to YES to enable macroscope
#
# # optional:
# NAME_flags=""				# additional command line arguments
#

. %%RC_SUBR%%

rcvar=$(set_rcvar)

prefix="%%PREFIX%%"

start_precmd()
{
	return 0
}

stop_postcmd()
{
	rm -f "$pidfile" || warn "Could not remove $pidfile."
}

# pidfile
pidfile="/var/run/${name}.pid"

# command and arguments
command="%%PREFIX%%/sbin/openvpn"

# run this first
start_precmd="start_precmd"
# and this last
stop_postcmd="stop_postcmd"

load_rc_config ${name}

command_args="--sniffer --daemon --pid ${pidfile}"

run_rc_command "$1"
